<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/tastebase_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tastebase_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TasteBase"
        tools:targetApi="31">

        <activity
            android:name=".views.activities.HomePage"
            android:exported="false" />
        <activity
            android:name=".views.activities.Login"
            android:exported="false" />
        <activity
            android:name=".views.activities.CreateRecipe"
            android:exported="false" />
        <activity
            android:name=".views.activities.SignUp"
            android:exported="false" />
        <activity
            android:name=".views.activities.Dish"
            android:exported="false" />
        <activity
            android:name=".views.activities.Recipes"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>